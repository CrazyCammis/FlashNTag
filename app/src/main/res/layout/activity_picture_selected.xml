<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PictureSelectedActivity">

    <ImageView
        android:id="@+id/selectedPicuture"
        android:layout_width="323dp"
        android:layout_height="395dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/captain_america_civil_war" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="292dp"
        android:layout_height="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedPicuture"
        app:layout_constraintVertical_bias="0.17" />

    <Button
        android:id="@+id/addTagButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add tag"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="605dp" />

    <Button
        android:id="@+id/deletePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deletepicture"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="602dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="141dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:text="@string/date_added"
        app:layout_constraintBottom_toTopOf="@+id/selectedPicuture"
        app:layout_constraintEnd_toEndOf="@+id/selectedPicuture"
        app:layout_constraintStart_toStartOf="@+id/selectedPicuture"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitTagButton"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:text="Submit"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toEndOf="@+id/addTagText"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/addTagText"
        android:layout_width="121dp"
        android:layout_height="30dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <Button
        android:id="@+id/cancellAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Cancel"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addTagText"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>